<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingStart">@dimen/size_24</item>
        <item name="android:paddingEnd">@dimen/size_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Navigation" parent="Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Navigation.Transparent" parent="Button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button_transparent</item>
        <item name="android:textColor">@color/purple_lighter</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Button.Google" parent="Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Dots">
        <item name="dotsColor">@color/grayish</item>
        <item name="dotsCornerRadius">@dimen/size_4</item>
        <item name="dotsSize">@dimen/size_8</item>
        <item name="dotsSpacing">@dimen/size_8</item>
        <item name="dotsWidthFactor">1.5</item>
        <item name="progressMode">true</item>
        <item name="selectedDotColor">@color/greenish</item>
    </style>

    <style name="Overlay">
        <item name="android:scaleType">fitXY</item>
        <item name="android:tint">@color/reddish</item>
    </style>

    <style name="OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">@dimen/size_1</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="elevation">@dimen/size_1</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">@color/transparent_gray</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_4</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_4</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_4</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_4</item>
        <item name="boxStrokeWidthFocused">@dimen/size_1</item>
        <item name="errorTextColor">@color/error_red</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
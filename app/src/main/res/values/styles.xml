<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingStart">@dimen/size_24</item>
        <item name="android:paddingEnd">@dimen/size_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Navigation" parent="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="Dots">
        <item name="dotsColor">@color/grayish</item>
        <item name="dotsCornerRadius">@dimen/size_4</item>
        <item name="dotsSize">@dimen/size_8</item>
        <item name="dotsSpacing">@dimen/size_8</item>
        <item name="dotsWidthFactor">1.5</item>
        <item name="progressMode">true</item>
        <item name="selectedDotColor">@color/greenish</item>
    </style>

    <style name="Overlay">
        <item name="android:scaleType">fitXY</item>
        <item name="android:tint">@color/reddish</item>
    </style>

</resources>